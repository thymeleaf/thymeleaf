<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <fileSets>
    <fileSet>
      <directory>${basedir}/target/apidocs/</directory>
      <outputDirectory>/apidocs/thymeleaf-extras-springsecurity3/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>thymeleaf-extras-springsecurity3-${project.version}.jar</include>
        <include>thymeleaf-extras-springsecurity3-${project.version}-javadoc.jar</include>
        <include>thymeleaf-extras-springsecurity3-${project.version}-sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.markdown</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
  </fileSets>
    
    
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.thymeleaf.extras:thymeleaf-extras-springsecurity3</exclude>
        </excludes>
    </dependencySet>
  </dependencySets> 
  
  
</assembly>
