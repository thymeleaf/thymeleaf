%TEMPLATE_MODE HTML5
# ------------------------------------------------------------
%CONTEXT
fragment1 = 'fragA'
fragment2 = 'fragB'
cond = true
# ------------------------------------------------------------
%INPUT
<div th:insert="(!${cond} ? ${fragment1} : ${fragment2}) :: f">...</div>
%INPUT[fragA]
<p th:fragment="f">Fragment A!</p>
%INPUT[fragB]
<p th:fragment="f">Fragment B!</p>
# ------------------------------------------------------------
%OUTPUT
<div><p>Fragment B!</p></div>
