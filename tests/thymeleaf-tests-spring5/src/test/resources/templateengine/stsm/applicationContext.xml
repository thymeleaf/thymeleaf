<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.2.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">


  <mvc:annotation-driven conversion-service="conversionService"/>

  <context:component-scan base-package="org.thymeleaf.templateengine.stsm"/>

  <bean id="conversionService"
        class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
    <property name="formatters">
      <set>
        <bean class="org.thymeleaf.templateengine.stsm.conversion.DateFormatter"/>
      </set>
    </property>
    <property name="converters">
      <set>
        <bean class="org.thymeleaf.templateengine.stsm.conversion.StringToVarietyConverter"/>
        <bean class="org.thymeleaf.templateengine.stsm.conversion.VarietyToStringConverter"/>
      </set>
    </property>
  </bean>


</beans>
